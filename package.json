{
  "name": "vscode-tiktoken-extension",
  "displayName": "Token Counter for Language Models",
  "description": "Language Model API tool for counting tokens in text using tiktoken",
  "version": "0.0.1",
  "publisher": "elemount",
  "repository": {
    "type": "git",
    "url": "https://github.com/elemount/vscode-tiktoken-extension"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [],
    "configuration": {
      "title": "Token Counter",
      "properties": {
        "tokenCounter.defaultProvider": {
          "type": "string",
          "default": "openai",
          "enum": ["openai", "claude", "gemini", "other"],
          "enumDescriptions": [
            "OpenAI (GPT) tokenizer using tiktoken",
            "Claude tokenizer from Anthropic",
            "Gemini tokenizer (fallback to tiktoken)",
            "Other models (fallback to tiktoken)"
          ],
          "description": "Default token counting provider to use"
        }
      }
    },
    "languageModelTools": [
      {
        "name": "vscode-tiktoken-extension.countTokens",
        "displayName": "Count Tokens",
        "description": "Count the number of tokens in text using the configured provider",
        "inputSchema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "description": "The text to count tokens for"
            }
          },
          "required": ["text"]
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "tiktoken": "^1.0.15",
    "@anthropic-ai/tokenizer": "^0.0.4"
  }
}

